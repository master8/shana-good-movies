<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Shana.Launcher" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">#202020</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.Shana.DayNight" parent="Theme.Shana">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.Shana" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorEdgeEffect">?colorSurface</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Shana.BottomSheetDialog</item>
    </style>

    <style name="ThemeOverlay.Shana.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>

        <item name="bottomSheetStyle">@style/Widget.Shana.BottomSheetDialog</item>
    </style>

</resources>